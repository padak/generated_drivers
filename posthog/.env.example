# PostHog Driver Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# REQUIRED: Your PostHog personal API key
# Get this from: PostHog Instance → Account Settings → API
# Example format: phc_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
POSTHOG_API_KEY=your_personal_api_key_here

# OPTIONAL: PostHog API base URL
# Defaults to US cloud if not set
# Options:
#   - US Cloud: https://app.posthog.com/api (default)
#   - EU Cloud: https://eu.posthog.com/api
#   - Self-hosted: https://your-instance.com/api
POSTHOG_API_URL=https://app.posthog.com/api

# OPTIONAL: Your PostHog project ID
# Can usually be inferred from API context
# Example: 12345
POSTHOG_PROJECT_ID=your_project_id_here

# OPTIONAL: Request timeout in seconds
# Default: 30
# Increase if you have slow network or large queries
# POSTHOG_TIMEOUT=30

# OPTIONAL: Maximum retry attempts for rate-limited requests
# Default: 3
# Increase for high-load scenarios
# POSTHOG_MAX_RETRIES=3

# OPTIONAL: Enable debug logging
# Default: false
# Set to true to see detailed API call logs
# POSTHOG_DEBUG=false

# Development/Testing Settings
# Uncomment these during development only

# Enable verbose output
# DEBUG=true

# Set log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=DEBUG
